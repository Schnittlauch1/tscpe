{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": false,
        "noLib": false,
        "outDir": "bin/",
        "sourceMap": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "lib/**/*.ts",
        "typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
